[Unit]
Description=TLS Certificate Monitor
Documentation=https://github.com/{{ github_repo }}
After=network.target
Wants=network-online.target

[Service]
Type=simple
User={{ service_user_linux }}
Group={{ service_user_linux }}
WorkingDirectory={{ install_dir_linux }}
ExecStart={{ install_dir_linux }}/tls-cert-monitor --config {{ config_dir_linux }}/config.yaml
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=tls-cert-monitor

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ config_dir_linux }} {{ log_dir_linux }}
ReadOnlyPaths=/etc/ssl /etc/pki /usr/local/share/ca-certificates

# Resource limits
LimitNOFILE=65536
LimitNPROC=32768

# Environment
Environment=TLS_CERT_MONITOR_CONFIG={{ config_dir_linux }}/config.yaml

[Install]
WantedBy=multi-user.target